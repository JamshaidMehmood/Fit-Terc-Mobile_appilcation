<!-- res/drawable/item_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Background color for each item -->
    <corners android:radius="8dp" /> <!-- Corner radius for a rounded appearance -->
    <stroke
        android:color="#000000"
        android:width="2dp" /> <!-- Border width -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" /> <!-- Add padding around the item -->
</shape>
